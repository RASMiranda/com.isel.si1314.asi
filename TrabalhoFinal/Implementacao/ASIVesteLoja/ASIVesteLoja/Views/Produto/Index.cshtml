            @Html.ActionLink("Designação", "Index", new { sortOrder = ViewBag.DesignacaoSortParm })
        </u></th>
        <th><u>
            @Html.ActionLink("Stock", "Index", new { sortOrder = ViewBag.StockQtdSortParm })
        </u></th>
        <th><u>
            @Html.ActionLink("Preço", "Index", new { sortOrder = ViewBag.PrecoSortParm })
        </u></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Designacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StockQtd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Preco)
        </td>
