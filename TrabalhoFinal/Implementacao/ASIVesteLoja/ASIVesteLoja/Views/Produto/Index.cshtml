@using (Html.BeginForm())
{
    <p>
        Pesquisa por Código/Designação: @Html.TextBox("SearchString")  
        <input type="submit" value="Search" /></p>
}
<table>
    <tr>
        <th><u>
            @Html.ActionLink("Código", "Index", new { sortOrder = ViewBag.CodigoSortParm })
        </u></th>
