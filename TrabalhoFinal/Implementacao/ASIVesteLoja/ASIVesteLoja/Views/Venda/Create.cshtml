@model ASIVesteLoja.Models.Venda

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Venda</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.nomeCliente)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nomeCliente)
            @Html.ValidationMessageFor(model => model.nomeCliente)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.moradaCliente)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.moradaCliente)
            @Html.ValidationMessageFor(model => model.moradaCliente)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.codigoProduto)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.codigoProduto)
            @Html.ValidationMessageFor(model => model.codigoProduto)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.quantidade)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.quantidade)
            @Html.ValidationMessageFor(model => model.quantidade)
        </div>

        <p>
            <input type="submit" value="Create" />&nbsp;<span class="message-error">@ViewBag.erro</span>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
