    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Reclamacao</legend>

        @Html.HiddenFor(model => model.ReclamacaoID)

        <div class="editor-label">
            @Html.LabelFor(model => model.ClienteBI)
