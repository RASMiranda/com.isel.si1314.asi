@model IEnumerable<ASIVesteSede.Models.Venda>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Vendas para Expedição</h2>

<p>
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoradaCliente)
        </th>
        <th>Estado</th>
        <th>N. Produtos</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeCliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoradaCliente)
        </td>
        <td>
             @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @item.Produtos.Count
        </td>
        <td>
            @Html.ActionLink("Expedir Encomenda", "Expedicao", new { id=item.VendaID }) 
        </td>
    </tr>
}

</table>
